# configs should be placed in config/environments/.env file
# Database Configuration
DATABASE_URL=postgresql://[user]:[password]@aws-1-eu-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_HOST=aws-1-eu-west-1.pooler.supabase.com
DATABASE_PORT=6543
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=postgres

# Supabase Configuration
SUPABASE_URL=https://[something].supabase.co
SUPABASE_ANON_KEY=your-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-here

# AI Services Configuration
CLAUDE_API_KEY=your-claude-api-key-here

# Embedding Service Configuration (Local sentence transformers)
# Local embeddings using @xenova/transformers - no API key required
# EMBEDDING_MODEL_CACHE_DIR=./cache/models (optional - for custom model cache location)

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_KEY_FILE=./config/your-google-cloud-key-file.json

# Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
WHATSAPP_ACCOUNT_SID=your-whatsapp-account-sid-here
WHATSAPP_AUTH_TOKEN=your-whatsapp-auth-token-here
WHATSAPP_PHONE_NUMBER=whatsapp:+14155238886

# App Configuration
PORT=3000
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=debug

# Environment configs
# use in config/environments/.env.environment-name
NODE_ENV=development/acceptance/production
LOG_LEVEL=debug/info/warn/error
CORS_ORIGIN=http://localhost:3001

# Development-specific database (if different)
# DATABASE_URL=postgresql://...development-db...

# Development AI settings (lower usage)
# CLAUDE_API_KEY=your-dev-key-with-lower-limits